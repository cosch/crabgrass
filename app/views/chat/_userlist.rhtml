<% for c_user in @channel.channels_users %>
  <div class="user" id="c_user-<%= c_user.user.id %>">
  <%= avatar_for c_user.user, 'xsmall' %>
  <%= link_to_user c_user.user %>
  <span id="typing-<%= c_user.user_id %>" style="display: none;"> (<%= I18n.t(:typing) %>) </span>
  </div>
<% end %>

<script type="text/javascript">
<%= render :partial => 'chat/userlist_status' %>
</script>

<script type="text/javascript">
set_chat_user_count( <%= @channel.channels_users.count %> );
</script>