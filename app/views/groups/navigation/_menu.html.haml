%ul
  = menu((I18n.t(:home)).capitalize, url_for_group(@parent || @group), active_tab_for_nav(@second_nav, 'home'))
  = menu((I18n.t(:pages)).capitalize, [group_search_url(:action => 'pages'), group_search_url(:action => 'archive')], active_tab_for_nav(@second_nav, 'pages'))
  = menu((I18n.t(:tasks)).capitalize, group_search_url(:action => 'tasks'), active_tab_for_nav(@second_nav, 'tasks'))
  = menu((I18n.t(:calendar)).capitalize, group_search_url(:action => 'calendar'), active_tab_for_nav(@second_nav, 'calendar'))
  = menu((I18n.t(:timeline)).capitalize, group_search_url(:action => 'timeline'), active_tab_for_nav(@second_nav, 'timeline'))
  - if may_update_group?
    = menu((I18n.t(:administration)), group_search_url(:action => 'edit'), active_tab_for_nav(@second_nav, 'administration'))
%div{:align=>'right'}
  = menu((I18n.t(:archive)).capitalize, url_for_group(@group)+"/#{@group.name}archive", active_tab_for_nav(@second_nav, 'archive'))
