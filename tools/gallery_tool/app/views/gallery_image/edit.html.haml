%h2.big_icon.page_gallery_48.title
  = I18n.t :edit_image_header

= Formy.tabs do |tabs|
  - tabs.tab do |tab|
    - tab.label I18n.t :media_image
    - tab.show_tab 'image-tab'
    - tab.selected true
  - call_hooks :edit_gallery_image_tabs, :tabs => tabs

#image-tab.tab_content.tab_area
  = render :partial => 'gallery_image/edit'
= call_hooks :edit_gallery_image_content

%div{:align => 'right'}
  = spinner('close_button')
  #close_button
    = button_to_function(I18n.t(:close_button), "$('close_button').hide(); $('close_button_spinner').show(); window.location='"+page_url(@page,:action => 'edit')+"';")



